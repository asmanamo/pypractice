import random

def magic_number_game():
    print("ğŸ”® Welcome to the Magic Number Game! ğŸ”®")
    print("The fortune teller has chosen a magic number between 1 and 100.")
    print("Use your intuition to guess it! She will guide you with hints.")

    # Generate a random number between 1 and 100
    magic_number = random.randint(1, 100)
    
    # Initialize the user's guess
    user_guess = None
    
    while user_guess != magic_number:
        try:
            # Prompt the user for a guess
            user_guess = int(input("Enter your guess (1-100): "))
            
            if user_guess < 1 or user_guess > 100:
                print("Please guess a number between 1 and 100 only!")
                continue
            
            # Give feedback
            if user_guess < magic_number:
                print("ğŸ”® Too low! Trust your intuition and try again.")
            elif user_guess > magic_number:
                print("ğŸ”® Too high! Focus your mind and guess again.")
            else:
                print("ğŸ‰ Congratulations! You guessed the magic number! ğŸ‰")
        except ValueError:
            print("Please enter a valid number.")

# Start the game
magic_number_game()
